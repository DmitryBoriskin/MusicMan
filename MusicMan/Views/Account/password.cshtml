@model AccountViewModel
@section Header {
    <script type="text/javascript" src="/Content/plugins/Disly/DislyControls.js"></script>
}
<div class="page-content">
    <div class="row">
        <div class="col-md-3 page-menu">
            @{ Html.RenderAction("Menu", "Templates", new { viewName = "user" }); }
        </div>
        <div class="col-md-9">
            <div style="padding-right: 15px;">
                <h1>@ViewBag.Title</h1>
                @Html.Password("OldPass", "", new { required = "", title = "Старый пароль", @placeholder = "Старый пароль" })
                @Html.Password("NewPass", "", new { required = "", title = "Новый пароль", @placeholder = "Новый пароль" })
                @Html.Password("ConfurmPass", "", new { required = "", title = "Подтверждение пароля", @placeholder = "Подтверждение пароля" })
                <div class="welcome-btn">
                    <input id="LoginButton" class="reg-button btn bg-primary" type="submit" value="Сохранить" />
                    <span class="icon-right-4"></span>
                </div>
            </div>
        </div>
    </div>
</div>
