@model AccountViewModel

<div class="account-info">
    <div class="row">
        <div class="col-xs-3 account-photo"><img alt="" src="@Model.Item.Photo" /></div>
        <div class="col-xs-9 account-name_block">
            <div class="account-name">
                <h1>@Model.Item.NicName</h1>
                @if (Model.Account != null)
                {
                    <a href="/accounts/edit/">Редактировать профиль</a>
                }
            </div>
            <div>@Model.Item.Desc</div>
        </div>
    </div>
    @if (Model.AccounWorks != null)
    { 
        if (Model.AccounWorks.Data != null)
        {
            <div class="work-list">
                @for (int i = 0; i < Model.AccounWorks.Data.Length; i = i + 4)
                {
                    <div class="row">
                        @for (int j = 0; j < 4; j++)
                        {
                            if (i + j < Model.AccounWorks.Data.Length)
                            {
                                WorkModel item = Model.AccounWorks.Data[i + j];
                                <div class="col-md-3">
                                    <div class="work-item">
                                        <img src="@item.Preview" />
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        }
        else
        {
          <div class="alert alert-info">Не найдено ни одной записи.</div> 
        }
    }
    else
    {
        <div class="alert alert-info">Не найдено ни одной записи.</div> 
    }
</div>