@model AccountViewModel

@section Header {
    <script src="/Content/plugins/Disly/DislyControls.js"></script>
}

<div class="page-content">
    <div class="row">
        <div class="col-md-3 hidden-xs hidden-sm">
            <div class="account-photo wite-block">
                <img alt="" src="@Model.Account.Photo" />
            </div>
            <div class="account-menu wite-block">
                @{ Html.RenderAction("Menu", "Templates", new { viewName = "user" }); }
            </div>
        </div>
        <div class="col-md-9">
            <div class="account-info wite-block">
                <h1>@ViewBag.Title</h1>
                <p>&nbsp;</p>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        @using (Html.BeginForm(Model.ActionName, Model.ControllerName, FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.Password("Password", "", new { required = "", title = "Пароль", @class = "RegField", @placeholder = "Пароль" })
                            @Html.Password("PasswordConfirm", "", new { required = "", title = "Подтверждение пароля", @class = "RegField", @placeholder = "Подтверждение пароля" })

                            <div class="alert alert-info">
                                <p>Длина пароля должна быть от 6 до 16 символов.</p> 
                                <p>Он должен содержать строчные и прописные буквы и может содержать цифры.</p> 
                                <p>Использование русских букв - не допускается.</p>
                            </div>
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                            <div class="welcome-btn">
                                <button id="LoginButton" name="action" value="change_pass" class="reg-button">Изменить пароль</button>
                            </div>
                        }
                    </div>
                </div>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
            </div>
        </div>
    </div>
</div>